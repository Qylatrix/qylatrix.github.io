    "techniques": [
        {
            "id": "dns-1",
            "name": "Zone Transfer (AXFR)",
            "difficulty": "Beginner",
            "description": "Request complete DNS zone copy from misconfigured servers",
            "steps": [
                "Identify DNS servers for target domain",
                "Attempt zone transfer",
                "Analyze discovered records"
            ],
            "commands": [
                {
                    "tool": "dig",
                    "command": "dig axfr @<dns_server> <domain>",
                    "description": "Attempt zone transfer with dig"
                },
                {
                    "tool": "host",
                    "command": "host -l <domain> <dns_server>",
                    "description": "Zone transfer with host command"
                },
                {
                    "tool": "nslookup",
                    "command": "nslookup -type=any <domain>",
                    "description": "Query all record types"
                },
                {
                    "tool": "dnsrecon",
                    "command": "dnsrecon -d <domain> -t axfr",
                    "description": "Automated zone transfer"
                }
            ],
            "tips": [
                "Most modern servers block zone transfers",
                "Internal DNS servers often misconfigured"
            ]
        },
        {
            "id": "dns-2",
            "name": "Subdomain Enumeration",
