{
    "name": "Password Attacks",
    "category": "passwords",
    "description": "Password cracking and credential attacks",
    "icon": "ðŸ”‘",
    "techniques": [
        {
            "id": "pass-1",
            "name": "Hash Identification",
            "difficulty": "Beginner",
            "description": "Identify hash types before cracking",
            "steps": [
                "Collect hash samples",
                "Analyze hash format",
                "Identify hash algorithm"
            ],
            "commands": [
                {
                    "tool": "hashid",
                    "command": "hashid '<hash>'",
                    "description": "Identify hash type"
                },
                {
                    "tool": "hash-identifier",
                    "command": "hash-identifier",
                    "description": "Interactive hash identifier"
                },
                {
                    "tool": "Name-That-Hash",
                    "command": "nth --text '<hash>'",
                    "description": "Modern hash identifier with hashcat mode"
                }
            ],
            "tips": [
                "Hash length often indicates type",
                "MD5=32 chars, SHA1=40 chars, SHA256=64 chars",
                "Check for salt presence"
            ]
        },
        {
            "id": "pass-2",
            "name": "Hashcat Attacks",
            "difficulty": "Intermediate",
            "description": "GPU-accelerated password cracking with hashcat",
            "steps": [
                "Identify hash type and mode",
                "Select attack mode",
                "Choose wordlist or rules",
                "Execute crack"
            ],
            "commands": [
                {
                    "tool": "Dictionary Attack",
                    "command": "hashcat -m 0 hash.txt rockyou.txt",
                    "description": "Basic wordlist attack (MD5)"
                },
                {
                    "tool": "Rules Attack",
                    "command": "hashcat -m 0 hash.txt rockyou.txt -r rules/best64.rule",
                    "description": "Wordlist with rules"
                },
                {
                    "tool": "Brute Force",
                    "command": "hashcat -m 0 hash.txt -a 3 ?a?a?a?a?a?a?a?a",
                    "description": "8-char brute force all chars"
                },
                {
                    "tool": "Combinator",
                    "command": "hashcat -m 0 hash.txt -a 1 dict1.txt dict2.txt",
                    "description": "Combine two wordlists"
                },
                {
                    "tool": "NTLM Crack",
                    "command": "hashcat -m 1000 ntlm_hashes.txt rockyou.txt",
                    "description": "Crack Windows NTLM hashes"
                }
            ],
            "tips": [
                "Common modes: 0=MD5, 100=SHA1, 1000=NTLM, 1800=sha512crypt",
                "-O for optimized kernels (faster)",
                "Use -w 3 for workload profile"
            ]
        },
        {
            "id": "pass-3",
            "name": "John the Ripper",
            "difficulty": "Intermediate",
            "description": "Versatile CPU-based password cracking",
            "steps": [
                "Prepare hash file",
                "Select attack mode",
                "Execute john"
            ],
            "commands": [
                {
                    "tool": "Auto Detect",
                    "command": "john hash.txt",
                    "description": "Auto-detect hash type and crack"
                },
                {
                    "tool": "Wordlist Mode",
                    "command": "john --wordlist=rockyou.txt hash.txt",
                    "description": "Dictionary attack"
                },
                {
                    "tool": "Show Cracked",
                    "command": "john --show hash.txt",
                    "description": "Display cracked passwords"
                },
                {
                    "tool": "Format Specific",
                    "command": "john --format=raw-md5 --wordlist=rockyou.txt hash.txt",
                    "description": "Specify hash format"
                },
                {
                    "tool": "Incremental",
                    "command": "john --incremental hash.txt",
                    "description": "Brute force mode"
                }
            ],
            "tips": [
                "John has many format-specific tools: zip2john, ssh2john, etc.",
                "Session files allow resume",
                "Mutate rules with --rules"
            ]
        },
        {
            "id": "pass-4",
            "name": "Online Password Attacks",
            "difficulty": "Beginner",
            "description": "Attack network authentication in real-time",
            "steps": [
                "Identify target service",
                "Prepare credentials",
                "Launch attack with delays"
            ],
            "commands": [
                {
                    "tool": "Hydra",
                    "command": "hydra -l admin -P passwords.txt <service>://<target>",
                    "description": "Generic hydra attack"
                },
                {
                    "tool": "Hydra HTTP POST",
                    "command": "hydra -l admin -P pass.txt <target> http-post-form '/login:user=^USER^&pass=^PASS^:Invalid'",
                    "description": "HTTP form brute force"
                },
                {
                    "tool": "Medusa",
                    "command": "medusa -h <target> -u admin -P passwords.txt -M ssh",
                    "description": "Medusa SSH brute force"
                },
                {
                    "tool": "CrackMapExec",
                    "command": "crackmapexec smb <target> -u users.txt -p passwords.txt",
                    "description": "SMB password spraying"
                }
            ],
            "tips": [
                "Use -t flag to limit threads",
                "Watch for account lockouts",
                "Password spraying is stealthier"
            ]
        },
        {
            "id": "pass-5",
            "name": "Credential Dumping",
            "difficulty": "Advanced",
            "description": "Extract credentials from compromised systems",
            "steps": [
                "Gain access to target system",
                "Use appropriate dumping tool",
                "Collect hashes or plaintext"
            ],
            "commands": [
                {
                    "tool": "Mimikatz",
                    "command": "mimikatz.exe \"privilege::debug\" \"sekurlsa::logonpasswords\" \"exit\"",
                    "description": "Windows credential extraction"
                },
                {
                    "tool": "secretsdump.py",
                    "command": "secretsdump.py domain/user:password@<target>",
                    "description": "Remote SAM/NTDS dump"
                },
                {
                    "tool": "Linux /etc/shadow",
                    "command": "cat /etc/shadow",
                    "description": "Linux password hashes"
                },
                {
                    "tool": "LaZagne",
                    "command": "python laZagne.py all",
                    "description": "Extract stored application passwords"
                }
            ],
            "tips": [
                "Mimikatz requires admin/SYSTEM",
                "secretsdump works remotely with creds",
                "Check browser credential stores"
            ]
        },
        {
            "id": "pass-6",
            "name": "Rainbow Tables",
            "difficulty": "Advanced",
            "description": "Pre-computed hash lookup",
            "steps": [
                "Obtain rainbow tables",
                "Import hash",
                "Lookup in table"
            ],
            "commands": [
                {
                    "tool": "RainbowCrack",
                    "command": "rcrack . -h <hash>",
                    "description": "Lookup hash in rainbow tables"
                },
                {
                    "tool": "Ophcrack",
                    "command": "ophcrack",
                    "description": "Windows password cracker with rainbow tables"
                },
                {
                    "tool": "Online Lookup",
                    "command": "# Use crackstation.net or hashes.com",
                    "description": "Online hash databases"
                }
            ],
            "tips": [
                "Only works for unsalted hashes",
                "Tables require significant storage",
                "Online databases often have common hashes"
            ]
        }
    ]
}